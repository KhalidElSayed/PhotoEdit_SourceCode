                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFramesClick"
                        android:src="@drawable/select_f_23"  android:layout_marginLeft="@dimen/scale_8dp"
                        android:tag="23" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFramesClick"
                        android:src="@drawable/select_f_24"  android:layout_marginLeft="@dimen/scale_8dp"
                        android:tag="24" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFramesClick"
                        android:src="@drawable/select_f_25"  android:layout_marginLeft="@dimen/scale_8dp"
                        android:tag="25" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFramesClick"
                        android:src="@drawable/select_f_26"  android:layout_marginLeft="@dimen/scale_8dp"
                        android:tag="26" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onFramesClick"
                        android:src="@drawable/select_f_30"  android:layout_marginLeft="@dimen/scale_8dp"
                        android:tag="30" />
                </LinearLayout>
            </HorizontalScrollView>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBrightness"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        android:visibility="gone" >

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" >

            <ImageView
                android:id="@+id/ivResetBrightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:onClick="onBrightnessClick"
                android:src="@drawable/reset_bright_btn" />

            <ImageView
                android:id="@+id/ivDoneBrightBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerInParent="true"
                android:onClick="onBrightnessClick"
                android:src="@drawable/done_bright_btn" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-3dp"
            android:background="@drawable/bg_bright_box"
            android:gravity="center"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:text="Brightness"
                        android:textColor="@color/tv_bright_box"
                        android:textSize="@dimen/tv_bright_box" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv"
                        android:background="@drawable/seekbar_bg_trans" >

                        <SeekBar
                            android:id="@+id/seekBarBrightness"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:progressDrawable="@drawable/seekbar_brightness"
                            android:secondaryProgress="0"
                            android:thumb="@drawable/seekbar_thumb" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:text="Contrast   "
                        android:textColor="@color/tv_bright_box"
                        android:textSize="@dimen/tv_bright_box" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv"
                        android:background="@drawable/seekbar_bg_trans" >

                        <SeekBar
                            android:id="@+id/seekBarContrast"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:progressDrawable="@drawable/seekbar_contrast"
                            android:secondaryProgress="0"
                            android:thumb="@drawable/seekbar_thumb" />
                    </LinearLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp" >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="20dp"
                        android:text="Saturation"
                        android:textColor="@color/tv_bright_box"
                        android:textSize="@dimen/tv_bright_box" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_toRightOf="@+id/tv"
                        android:background="@drawable/seekbar_bg_trans" >

                        <SeekBar
                            android:id="@+id/seekBarSaturation"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:paddingLeft="7dp"
                            android:paddingRight="7dp"
                            android:progressDrawable="@drawable/seekbar_saturation"
                            android:secondaryProgress="0"
                            android:thumb="@drawable/seekbar_thumb" />
                    </LinearLayout>
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1.8"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <CheckBox
                        android:id="@+id/chkAutoLevel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox" />

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="-10dp"
                        android:text="Auto Level"
                        android:textColor="@color/tv_bright_box"
                        android:textSize="@dimen/tv_bright_box" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <TextView
                        android:id="@+id/tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="7dp"
                        android:text="Auto White Balance"
                        android:textColor="@color/tv_bright_box"
                        android:textSize="@dimen/tv_bright_box" />

                    <CheckBox
                        android:id="@+id/chlAutoWhiteBalance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:button="@drawable/checkbox" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</FrameLayout>